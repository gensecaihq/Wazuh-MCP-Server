# Default Configuration for Wazuh MCP Server v3.0.0
# ===================================================
# Self-contained production configuration with backward compatibility
# Copy to .env and customize for your environment

# =============================================================================
# WAZUH API CONFIGURATION (REQUIRED)
# =============================================================================
WAZUH_API_URL=https://your-wazuh-manager:55000
WAZUH_API_USERNAME=wazuh-mcp-user
WAZUH_API_PASSWORD=your-secure-password
WAZUH_API_VERIFY_SSL=true

# =============================================================================
# MCP SERVER CONFIGURATION
# =============================================================================
# Server mode: auto (detects environment), stdio (v2.0.0 compat), remote (v3.0.0)
MCP_SERVER_MODE=auto
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=8443

# Transport: stdio (local), http (REST API), sse (Server-Sent Events)
MCP_TRANSPORT=sse

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# OAuth 2.0 Authentication (for remote mode)
OAUTH_ENABLED=true
OAUTH_CLIENT_ID=wazuh-mcp-client
OAUTH_CLIENT_SECRET=your-oauth-secret

# JWT Token Configuration
JWT_SECRET_KEY=your-jwt-secret-key-minimum-32-characters
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_ENABLED=true

# Admin User (auto-created)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-admin-password

# =============================================================================
# PERFORMANCE & SCALING
# =============================================================================
MAX_CONNECTIONS=1000
REQUEST_TIMEOUT=30
WORKER_PROCESSES=4

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_TO_FILE=true
LOG_ROTATION_SIZE=100MB
LOG_RETENTION_DAYS=30

# =============================================================================
# MONITORING & METRICS
# =============================================================================
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_ENABLED=true

# Prometheus Integration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9091

# =============================================================================
# CACHING & STORAGE
# =============================================================================
# Redis Configuration (optional - embedded Redis used if not specified)
REDIS_ENABLED=true
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=redis-secret
REDIS_DB=0

# Cache Settings
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================
DEBUG_MODE=false
DEVELOPMENT_MODE=false
ENABLE_CORS=true
CORS_ORIGINS=*

# =============================================================================
# SELF-CONTAINED MODE (Docker)
# =============================================================================
SELF_CONTAINED=true
AUTO_GENERATE_CONFIG=true
PRESERVE_V2_COMPATIBILITY=true

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================
SSL_ENABLED=true
SSL_CERT_PATH=/app/config/ssl/cert.pem
SSL_KEY_PATH=/app/config/ssl/key.pem
SSL_CA_PATH=/app/config/ssl/ca.pem

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=/app/data/backups

# =============================================================================
# INTEGRATION SETTINGS
# =============================================================================
# Claude Desktop Integration
CLAUDE_DESKTOP_INTEGRATION=true
CLAUDE_DESKTOP_CONFIG_PATH=/app/config/claude-desktop.json

# Grafana Integration (optional)
GRAFANA_ENABLED=false
GRAFANA_URL=http://localhost:3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin