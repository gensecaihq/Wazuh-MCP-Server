# Wazuh MCP Server v3.0.0 - Production Configuration Template
# ================================================================
# Copy this file to .env for production deployment
# Ensure secure configuration for production environments

# =============================================================================
# WAZUH CONFIGURATION (Required)
# =============================================================================
WAZUH_HOST=wazuh-manager.production.com
WAZUH_USER=wazuh-mcp-api
WAZUH_PASS=REPLACE_WITH_SECURE_PASSWORD
WAZUH_PORT=55000
WAZUH_INDEXER_HOST=wazuh-indexer.production.com
WAZUH_INDEXER_PORT=9200
VERIFY_SSL=true
WAZUH_ALLOW_SELF_SIGNED=false

# =============================================================================
# SERVER CONFIGURATION (v3.0.0)
# =============================================================================
ENVIRONMENT=production
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=8443
MCP_TRANSPORT=sse
DEBUG=false

# =============================================================================
# OAUTH2 AUTHENTICATION (Production Security)
# =============================================================================
OAUTH_ENABLED=true
OAUTH_CLIENT_ID=wazuh-mcp-production
OAUTH_CLIENT_SECRET=REPLACE_WITH_SECURE_SECRET
JWT_SECRET_KEY=REPLACE_WITH_256_BIT_SECRET
JWT_ACCESS_TOKEN_EXPIRY=3600
JWT_REFRESH_TOKEN_EXPIRY=86400

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600
ENABLE_AUDIT_LOG=true
PASSWORD_MIN_LENGTH=12
PASSWORD_MAX_AGE=90

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_LEVEL=INFO
LOG_FORMAT=json
AUDIT_LOG_RETENTION_DAYS=2555

# =============================================================================
# HIGH AVAILABILITY
# =============================================================================
REDIS_HOST=redis-cluster.production.com
REDIS_PORT=6379
REDIS_PASSWORD=REPLACE_WITH_REDIS_PASSWORD
REDIS_SENTINEL_ENABLED=true

# =============================================================================
# SSL/TLS CERTIFICATES
# =============================================================================
SSL_CERT_PATH=/certs/server.crt
SSL_KEY_PATH=/certs/server.key
SSL_CA_PATH=/certs/ca.crt
TLS_MIN_VERSION=1.2

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
AWS_S3_BUCKET=wazuh-mcp-production-backups
AWS_REGION=us-east-1

# =============================================================================
# MONITORING STACK
# =============================================================================
PROMETHEUS_RETENTION_TIME=30d
GRAFANA_ADMIN_PASSWORD=REPLACE_WITH_SECURE_PASSWORD
ALERTMANAGER_SMTP_FROM=alerts@production.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/PRODUCTION/WEBHOOK

# =============================================================================
# COMPLIANCE
# =============================================================================
ENABLE_COMPLIANCE_LOGGING=true
COMPLIANCE_FRAMEWORKS=SOC2,ISO27001
SOC2_COMPLIANCE_ENABLED=true
ISO27001_COMPLIANCE_ENABLED=true